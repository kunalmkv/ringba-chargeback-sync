upstream assembly {
    server 127.0.0.1:5001;
}
upstream ringba-sync-dashboard {
    server 127.0.0.1:3000;
}
upstream backend_ringba {
    server 127.0.0.1:3001;
}

server {
    listen 80;
    server_name insidefi.co;

    access_log /var/log/nginx/insidefi.access.log;
    error_log  /var/log/nginx/insidefi.error.log;

    # API -> backend
    location /api/ {
        proxy_pass http://backend_ringba;
        proxy_http_version 1.1;
        proxy_set_header Upgrade           $http_upgrade;
        proxy_set_header Connection        "upgrade";
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Assembly -> service
    location /assembly/ {
        proxy_pass http://assembly/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade           $http_upgrade;
        proxy_set_header Connection        "upgrade";
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Ringba Sync Dashboard - MUST be before root location
    location /ringba-sync-dashboard {
        # Remove trailing slash if present, then strip prefix
        rewrite ^/ringba-sync-dashboard/?(.*)$ /$1 break;
        proxy_pass http://ringba-sync-dashboard;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # Important: Don't buffer responses for better error handling
        proxy_buffering off;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # Frontend -> static build at root
    # Point alias to your built client/dist path
    location / {
        root /var/www/ringba/client/dist;
        try_files $uri $uri/ /index.html;
    }

    # Optional: cache static assets
    location ~* \.(?:js|css|png|jpg|jpeg|gif|svg|ico|woff2?)$ {
        root /var/www/ringba/client/dist;
        expires 7d;
        add_header Cache-Control "public";
        access_log off;
    }

}